<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.delicious">

    <application
        android:allowBackup="true"
        android:icon="@drawable/new_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/new_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Delicious">
        <activity android:name=".RatingsActivity"
            android:label="Recipe ratings"></activity>
        <activity
            android:name=".ClientRecipesActivity"
            android:label="My Recipes">
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="Add new Recipe">
        </activity>
        <activity
            android:name=".FavouriteActivity"
            android:label="My Favorites">
        </activity>
        <activity
            android:name=".RecipeDetails"
            android:theme="@style/Theme.Delicious.NoActionBar" />
        <activity
            android:name=".RecipesActivity"
            android:label="Choose your favorite Recipe">
        </activity>
        <activity
            android:name=".SubcategoryActivity"
            android:label="Choose your favorite Country">
        </activity>
        <activity
            android:name=".CheckActivationActivity"
            android:theme="@style/Theme.Delicious.NoActionBar"/>
        <activity
            android:name=".ForgetPWActivity"
            android:theme="@style/Theme.Delicious.NoActionBar"/>
        <activity
            android:name=".MyProfileActivity"
            android:theme="@style/Theme.Delicious.NoActionBar" />
        <activity
            android:name=".MainUserActivity"
            android:label="@string/title_activity_main_user"
            android:theme="@style/Theme.Delicious.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.Delicious.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>